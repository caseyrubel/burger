<h1>EAT DA BURGER</h1>
<ul>
  {{#each burger}}
    {{#unless this.devoured}}
      <li>
        {{this.name}}
        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="sleepy" value="true">
          <button type="submit">SLEEP TIME!</button>
        </form>
        {{> cats/delete-cat}}
      </li>
    {{/unless}}
  {{/each}}
</ul>
<h2>Burgers you've devoured</h2>
<ul>
  {{#each burger}}
    {{#if this.devoured}}
      <li>
        {{this.name}}
        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="sleepy" value="false">
          <button type="submit">Eat!</button>
        </form>
        {{> cats/delete-cat}}
      </li>
    {{/if}}
  {{/each}}
</ul>
<h2>What burger do you want to devour</h2>
<form class="create-update-form" action="/" method="POST">
  <div class="form-group">
    <label for="ca">Burger:</label>
    <input type="text" id="ca" name="name">
  </div>
  <div class="form-group">
    <label for="slee">Sleepy?</label><br>
    <input type="radio" name="sleepy" value="1" checked> <br>
    <input type="radio" name="sleepy" value="0"> Awake
  </div>
  <button type="submit">Add Burger</button>
</form>